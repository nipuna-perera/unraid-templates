  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>18000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/downloads/audiobooks</HostDir>
      <ContainerDir>/input</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/media/audiobooks</HostDir>
      <ContainerDir>/output</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/bragibooks/config/</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels/>
  <Config Name="Host Port 1" Target="8000" Default="8000" Mode="tcp" Description="Container Port: 8000" Type="Port" Display="always" Required="true" Mask="false">18000</Config>
  <Config Name="input" Target="/input" Default="/mnt/user/downloads/audiobooks" Mode="rw" Description="Container Path: /input" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/downloads/audiobooks</Config>
  <Config Name="output" Target="/output" Default="/mnt/user/media/audiobooks" Mode="rw" Description="Container Path: /output" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media/audiobooks</Config>
  <Config Name="config" Target="/config" Default="/mnt/user/appdata/bragibooks/config" Mode="rw" Description="Container Path: /config" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/bragibooks/config/</Config>
</Container>
